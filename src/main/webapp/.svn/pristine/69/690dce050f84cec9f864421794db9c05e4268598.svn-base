// Settings
@import "px-colors-design/_settings.colors.scss";
@import "aha-table-sketch.scss";

:host{
  --cell--value__highlight--high--color: rgba($alert-red, 0.25);
  --cell--value__highlight--medium--color: rgba($alert-yellow, 0.25);
  --cell--value__highlight--low--color: rgba($alert-blue, 0.25);
}

.use-the-var-in-something{
  background-color: var(--cell--value__highlight--color);
}
