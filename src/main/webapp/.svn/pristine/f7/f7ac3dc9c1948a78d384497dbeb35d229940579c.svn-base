//
// Sass for the Predix notion of the px-dropdown component
//
// @author
//

/*
THIS FILE SHOULD CONTAIN ONLY RULES SPECIFIC TO PREDIX BRANDING
common/abstract rules go in px-dropdown-content-sketch.scss, not in this file.
*/

// Settings
@import "px-colors-design/_settings.colors.scss";

@import 'px-dropdown-content-sketch.scss';

// Component

.px-dropdown--content{
  background-color: $gray1;
  border-radius: 3px;
  border: 1px solid $gray5;
  color: $black;
}
.px-dropdown--listitem {
  &:hover {
    background-color: $select-blue-default;
    color: $white;
  }
&:first-child {
    border-radius: 4px 4px 0 0;
  }
  :last-child {
    border-radius: 0 0 4px 4px;
  }
}
