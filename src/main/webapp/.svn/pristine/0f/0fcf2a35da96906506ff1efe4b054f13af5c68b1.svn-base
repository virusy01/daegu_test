//
// @author
//
/*
THIS FILE SHOULD CONTAIN ONLY ABSTRACT/'SKETCH' THEME RULES, NOT SPECIFIC TO PREDIX BRANDING
Predix branding rules go in px-data-table-predix.scss, not in this file.
*/
// Settings
@import "px-defaults-design/_settings.defaults.scss";
@import "px-mixins-design/_tools.mixins.scss";
// Generic
@import "px-normalize-design/_generic.normalize.scss";
@import "px-box-sizing-design/_generic.box-sizing.scss";
@import "px-helpers-design/_generic.helpers.scss";
// Base
@import "px-flexbox-design/_base.flexbox.scss";
@import "px-viewport-design/_base.viewport.scss";

$inuit-enable-input--tiny: true;
$inuit-enable-text-input--bare: true;
$inuit-enable-validation-states : true;

@import "px-forms-design/_base.forms.scss";

$inuit-enable-table--fixed: true;
$inuit-enable-table--small: true;
$inuit-enable-table--large: true;
$inuit-enable-table--rows: true;
$inuit-enable-table--columns: true;
$inuit-table-border-color: $gray5;

@import "px-tables-design/_base.tables.scss";

@import "px-layout-design/_objects.layout.scss";

$inuit-enable-btn--bare: true;
$inuit-enable-btn--primary: true;
$inuit-enable-btn--icon: true;
$inuit-enable-btn--disabled: true;

@import "px-buttons-design/_objects.buttons.scss";

.btn--bare__pagination {
  width: 32px;
}

.th {
  @extend th;
  display: table-cell;
  resize:horizontal;
}

// making th--no-borders class specific enough to override other table.table.aha-table, etc. selectors
.th--no-borders.th--no-borders.th--no-borders {
  border-top: 0;
  border-left: 0;
  border-right: 0;
}

.table {
  @extend table;
  display: table !important;
  margin-bottom: 0rem;
}

.tr {
  @extend tr;
  display: table-row;
}

.td.td {
  @extend td;
  display: table-cell;
  vertical-align: middle;
  padding-top: var(--px-data-table-padding-top);
  padding-bottom: var(--px-data-table-padding-bottom);
  padding-left: var(--px-data-table-padding-left);
  padding-right: var(--px-data-table-padding-right);
}

:host {
  display: block;
  overflow-x: hidden;
  width: 100%;
}

.pagination {
  float: right;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.scroll-body {
  display: block;
  overflow-x: scroll;
  overflow-y: hidden;
  margin-bottom: 1rem;
  padding-left: 1px; /*firefox border collapse fix*/
  padding-right: 1px; /*firefox border collapse fix*/
}

th {
  text-align: left;
}

.column-head {
  white-space: nowrap;
}

label {
  margin: 0;
}

.sorted-text-hover:hover {
  cursor: pointer;
}

.no-results {
  color: $gray6;
  height: 2rem;
  align-items: center;
}

.columnChooser {
  flex-direction: row-reverse;
  margin-right: 2px;
}

.moveable {
  cursor: move;
}

.header--drag-handle {
  cursor: col-resize;
  width: 15px;
  min-height: 100%;
}

.header--container {
  justify-content: space-between;
}

.aha-_selected-th {
  width:100px;
}

.aha-insertion-indicator-th.aha-insertion-indicator-th.aha-insertion-indicator-th {
  border: none;
  max-width:4px;
  min-width:4px;
  width:4px;
  padding: 0;
}

.table .aha-insertion-indicator-td {
  border: none;
  max-width:4px;
  min-width:4px;
  width:4px;
  padding: 0;
}

.insertion-indicator.insertion-indicator.insertion-indicator {
  border:none;
  max-width:4px;
  min-width:4px;
  width:4px;
  padding: 0;
}

// Trumps
@import "inuit-clearfix/_trumps.clearfix.scss";

$inuit-enable-margins--none: true;
$inuit-enable-margins--small: true;
$inuit-enable-margins--tiny: true;
$inuit-enable-margins--large: true;
$inuit-enable-paddings--none: true;
$inuit-enable-paddings--small: true;
$inuit-enable-paddings--large: true;
$inuit-enable-paddings--none: true;
@import "px-spacing-responsive-design/_trumps.spacing-responsive.scss";
@import "px-widths-responsive-design/_trumps.widths-responsive.scss";
