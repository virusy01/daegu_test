// Settings
@import "px-colors-design/_settings.colors.scss";
@import 'aha-table-sketch.scss';

.striped:nth-child(even) {
  background-color: $gray2;
}

.sorted-text {
  color: $select-blue-default;
}

.btn--pagination--number {
  background-color: $select-blue-default;
  color: $white;
  &:hover {
    background-color: $select-blue-default;
    color: $white;
  }
}

.table .aha-insertion-indicator-td {
  background-color: $primary-blue;
}

.insertion-indicator.insertion-indicator.insertion-indicator {
  background-color: $primary-blue;
}

.dragged {
  color: $primary-blue;
}

.btn--pagination:focus {
  outline: 0;
}

.text-input--filter {
  background-color: $white;
}

.tr--filter {
  background-color: $gray4;
}

.selected-cell__selected.selected-cell__selected {
  background-color: $select-blue-default;
  border: 1px double $select-blue-default !important;
}

.th {
  font-weight: bold;
}

.sorted-text-hover:hover {
  color: $select-blue-hover;
  cursor: pointer;
}

.cell--value__validation-failed{
  border: $inuit-table-border-width double $alert-red !important;
}

.cell--value__highlight--color__high{
  background-color: var(--cell--value__highlight--color__high, rgba($alert-red, 0.25));
}

.cell--value__highlight--color__medium{
  background-color: var(--cell--value__highlight--color__medium, rgba($alert-yellow, 0.25));
}

.cell--value__highlight--color__low{
  background-color: var(--cell--value__highlight--color__low, rgba($alert-blue, 0.25));
}
