//
// Sass for the "sketch" notion of the px-tooltip component
//
// @author
//

/*
THIS FILE SHOULD CONTAIN ONLY ABSTRACT/'SKETCH' THEME RULES, NOT SPECIFIC TO PREDIX BRANDING
Predix branding rules go in px-tooltip-predix.scss, not in this file.
*/

// Settings
@import "px-colors-design/_settings.colors.scss";

// Generic
@import "px-normalize-design/_generic.normalize.scss";
@import "px-box-sizing-design/_generic.box-sizing.scss";
@import "px-helpers-design/_generic.helpers.scss";

// Base
@import "px-flexbox-design/_base.flexbox.scss";
@import "px-viewport-design/_base.viewport.scss";


$margin: 15px;
$carat: 7px;
$border-radius: 4px;
$tooltip-color: $black;
$tooltip-text-color: $white;
$tooltip-max-width: 400px;

:host {
    display: block;
    position: absolute !important;
    outline: none;
    z-index: 1002;
}

#tooltip {
    outline: none;
    padding: 15px;
    background-color: $tooltip-color;
    margin: $margin;
    color: $tooltip-text-color;
    max-width: $tooltip-max-width;
    white-space: normal;
    overflow-wrap: break-word;

    h6 {
        margin: 0;
    }
    p {
        margin: 0;
    }
}

div#carat {
    position: absolute;
    width: 0;
    height: 0;
    &.bottom {
        top: $carat + 1;
        border-left: $carat solid transparent;
        border-right: $carat solid transparent;
        border-bottom: $carat solid $tooltip-color;
    }
    &.top {
        top: 0;
        border-left: $carat solid transparent;
        border-right: $carat solid transparent;
        border-top: $carat solid $tooltip-color;
    }
    &.left {
        right: $carat + 1;
        border-top: $carat solid transparent;
        border-bottom: $carat solid transparent;
        border-left: $carat solid $tooltip-color;
    }
    &.right {
        left: $carat + 1;
        border-top: $carat solid transparent;
        border-bottom: $carat solid transparent;
        border-right: $carat solid $tooltip-color;
    }
}

// Trumps
@import "inuit-clearfix/_trumps.clearfix.scss";
@import "px-spacing-responsive-design/_trumps.spacing-responsive.scss";
@import "px-widths-responsive-design/_trumps.widths-responsive.scss";
