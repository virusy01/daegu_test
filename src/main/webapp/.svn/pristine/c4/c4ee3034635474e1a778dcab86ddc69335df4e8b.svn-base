<dom-module id="common-style">
    <template>
        <style>
            :host {
                --table-border: {
                    border: 1px solid #d2d2d2;
                }
            }

            a:link,
            a:active,
            a:hover,
            a:visited {
                text-decoration: inherit;
                color: inherit;
            }

            .hidden {
                display: none;
            }

            .table {
                font-size: 12px;
                width: 100%;
                @apply(--table-border);
                border-collapse: collapse;
            }

            .table th {
                background-color: #eeeeee;
            }

            .table th,
            .table td {
                padding: 10px;
                @apply(--table-border);
            }

            .align-right {
                text-align: right;
            }

            .align-center {
                text-align: center;
            }
        </style>
    </template>
</dom-module>
