<link rel="import" href="/bower_components/polymer/polymer.html" />
<link rel="import" href="/bower_components/iron-ajax/iron-ajax.html" />
<link rel="import" href="/bower_components/vaadin-combo-box/vaadin-combo-box.html" />
<link rel="import" href="/bower_components/vaadin-date-picker/vaadin-date-picker.html" />
<link rel="import" href="/bower_components/paper-card/paper-card.html" />
<link rel="import" href="/bower_components/paper-input/paper-input.html" />
<link rel="import" href="/bower_components/paper-input/paper-input-container.html" />
<link rel="import" href="/bower_components/paper-button/paper-button.html" />
<link rel="import" href="/bower_components/iron-icons/iron-icons.html" />
<link rel="import" href="/bower_components/iron-form/iron-form.html" />
<link rel="import" href="/bower_components/paper-dialog/paper-dialog.html" />

<link rel="import" href="../common/input-business-number.html" />
<link rel="import" href="../common/dialog-alert.html" />

<link rel="import" href="../style/common-style.html" />

<dom-module id="corp-create">
    <template>
        <style include="common-style">
            :host {
                @apply(--layout-vertical);
                padding: 15px;
                --iron-icon-height: 15px;
                --iron-icon-width: 15px;
                --paper-button: {
                    background-color: #ff6138;
                    color: white;
                    font-size: 13px;
                }
            }

            paper-button iron-icon {
                margin-right: 5px;
            }

            .card-content table {
                font-size: 12px;
                width: 100%;
            }

            .card-content table th {
                text-align: right;
                padding-right: 30px;
            }
        </style>

        <iron-ajax auto url="/api/common/comp_kind/code/" headers='{"X-Requested-With": "XMLHttpRequest"}' last-response="{{_codes.compKind}}" on-error="_onErrorHandler"></iron-ajax>
        <iron-ajax auto url="/api/common/corp_type/code/" headers='{"X-Requested-With": "XMLHttpRequest"}' last-response="{{_codes.corpType}}" on-error="_onErrorHandler"></iron-ajax>
        <iron-ajax auto url="/api/common/biz_sect/code/" headers='{"X-Requested-With": "XMLHttpRequest"}' last-response="{{_codes.bizSect}}" on-error="_onErrorHandler"></iron-ajax>

        <iron-ajax id="protocolSaveCorpInfo" url="/api/corp/info" headers='{"X-Requested-With": "XMLHttpRequest"}' method="POST" content-type="application/json" on-response="_formResponse"></iron-ajax>

        <h1>기업현황 등록</h1>

        <paper-card elevation="1">
            <form is="iron-form" id="corpForm" method="POST" action="/api/corp/info" content-type="application/json">
                <div class="card-content">
                    <table>
                        <colgroup>
                            <col width="20%" />
                            <col />
                            <col width="20%" />
                            <col />
                        </colgroup>
                        <tr>
                            <th>
                                기업명
                            </th>
                            <td>
                                <paper-input name="corpNm" required></paper-input>
                            </td>
                            <th>
                                사업개시일
                            </th>
                            <td>
                                <vaadin-date-picker name="bizDt" required></vaadin-date-picker>
                            </td>
                        </tr>
                        <tr>
                            <th>
                                대표자
                            </th>
                            <td>
                                <paper-input name="ceoNm" required></paper-input>
                            </td>
                            <th>
                                사업자번호
                            </th>
                            <td>
                                <paper-input-container name="bizNo" attr-for-value="value">
                                    <input-business-number class="paper-input-input"></input-business-number>
                                </paper-input-container>
                            </td>
                        </tr>
                        <tr>
                            <th>
                                법인형태
                            </th>
                            <td>
                                <vaadin-combo-box id="corpType" name="corpType" label="법인형태" items="{{_codes.corpType}}" item-label-path="cdNm" item-value-path="cd" on-value-changed="_onCorpTypeChanged" required></vaadin-combo-box>
                                <paper-input id="corpType2" name="corpType2" class="hidden"></paper-input>
                            </td>
                            <th>
                                기업분류
                            </th>
                            <td>
                                <vaadin-combo-box id="compKind" name="compKind" label="기업분류" items="{{_codes.compKind}}" item-label-path="cdNm" item-value-path="cd" required></vaadin-combo-box>
                            </td>
                        </tr>
                        <tr>
                            <th>
                                사업업종
                            </th>
                            <td colspan="3">
                                <vaadin-combo-box id="bizSect" name="bizSect" label="업종분류" items="{{_codes.bizSect}}" item-label-path="cdNm" item-value-path="cd" on-value-changed="_onBizSectChanged" required></vaadin-combo-box>
                                <paper-input id="bizSect2" name="bizSect2" class="hidden"></paper-input>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="card-actions">
                    <a href="/corp/all" tabindex="-1">
                        <paper-button>
                            <iron-icon icon="toc"></iron-icon>
                            목록
                        </paper-button>
                    </a>
                    <paper-button on-tap="_save">
                        <iron-icon icon="save"></iron-icon>
                        저장
                    </paper-button>
                </div>
            </form>
        </paper-card>

        <dialog-alert id="alert"></dialog-alert>

    </template>

    <script>
        Polymer({
            is: "corp-create",

            properties: {
                _codes: {
                    type: Object,
                    value: function() {
                        return {
                            compKind: [],
                            corpType: [],
                            bizSect: [],
                        };
                    }
                },
            },

            _save: function() {
                if (this.$.corpForm.validate()) {
                    this.$.protocolSaveCorpInfo.body = [
                        this.$.corpForm.serialize()
                    ];

                    this.$.protocolSaveCorpInfo.generateRequest();
                }
            },

            _formResponse: function(e) {
                switch (e.detail.status) {
                    case 200:
                        this.$.alert.msg = "정상적으로 반영되었습니다.";
                        this.$.alert.dialog.open();
                        break;
                    default:
                        this.$.alert.msg = "오류가 발생했습니다.";
                        this.$.alert.dialog.open();
                        break;
                }
            },

            refresh: function() {
                this.$.corpForm.reset();
            },

            _onCorpTypeChanged: function(e) {
                if (e.target.value == "06")
                    this.$.corpType2.classList.remove("hidden");
                else
                    this.$.corpType2.classList.add("hidden");
            },

            _onBizSectChanged: function(e) {
                if (e.target.value == "16")
                    this.$.bizSect2.classList.remove("hidden");
                else
                    this.$.bizSect2.classList.add("hidden");
            },
            
            _onErrorHandler : function(e)
            {
            	var status = e.detail.request.status;
            	if(status == 403)
           		{
           			location.href = "/";
           		}
            }
        })
    </script>
</dom-module>
