/*
THIS FILE SHOULD CONTAIN ONLY RULES SPECIFIC TO PREDIX BRANDING
common/abstract rules go in px-dropdown-text-sketch.scss, not in this file.
*/

// Settings
@import "px-colors-design/_settings.colors.scss";

@import 'px-dropdown-chevron-sketch.scss';

:host {
  cursor: pointer;
  border-radius: 0 3px 3px 0;
  display: flex;
  max-height: calculateRem(31px);
}
.hover {
  border-radius: 0 3px 3px 0;
}

.opened {
  border-radius: 0 3px 3px 0;
}
