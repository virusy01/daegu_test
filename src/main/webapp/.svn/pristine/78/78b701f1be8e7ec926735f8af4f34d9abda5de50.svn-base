<dom-module id="gp-portal-manager-style">
    <template>
        <style>
            :host {
                float: left;
                position: relative;

                --component-width: 100px;
                --component-height: 54px;
            }

            .components {
                cursor: pointer;
            }

            /* figure when component is dragged out of the manager area */
            .ghost {
                border: 1px dashed red;
                background-color: rgba(238, 238, 238, 0.9);
                text-align: center;
                vertical-align: middle;
                cursor: all-scroll;
                -webkit-box-sizing: border-box;
                -moz-box-sizing: border-box;
                box-sizing: border-box;
                -webkit-border-radius: 4px;
                -moz-border-radius: 4px;
                border-radius: 4px;
            }

            .icon {
                position: relative;
                top: 58%;
                transform: translateY(-50%);
            }
        </style>
    </template>
</dom-module>